---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";

const {
	title,
	description,
	showNavigation = true,
	navigationItems,
} = Astro.props;
const base = import.meta.env.BASE_URL || "/";

// Default navigation items
const defaultNavigationItems = [
	{ label: "Home", href: "/" },
	{
		label: "Google",
		href: "https://google.com",
		external: true,
	},
];

//if the component does not have navigation items, use the default
const navItems = navigationItems || defaultNavigationItems;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
		{description && <meta name="description" content={description} />}
		<title>{title}</title>
	</head>
	<body class="bg-blue-950 min-h-screen">
		{showNavigation && <Navigation items={navItems} />}
		<div class="text-white">
			<main class={showNavigation ? "pt-4" : ""}>
				<slot />
			</main>
		</div>
	</body>
</html>
